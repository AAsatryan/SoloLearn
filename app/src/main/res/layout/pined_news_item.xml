<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:layout_marginStart="@dimen/margin_small"
    android:layout_marginEnd="@dimen/margin_small"
    app:cardElevation="@dimen/margin_small"
    app:cardCornerRadius="@dimen/margin_small"
    android:layout_width="@dimen/small_card_size"
    android:layout_height="@dimen/small_card_size">


    <ImageView
        android:id="@+id/pinedNewsImage"
        android:src="@mipmap/ic_launcher_round"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_pin_news"/>


    <TextView
        android:id="@+id/pinNewsCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/news_title_text_size"
        android:textStyle="bold"
        android:layout_gravity="bottom|center"
        android:padding="@dimen/padding_small"
        android:textColor="#ffff"/>

</android.support.v7.widget.CardView>