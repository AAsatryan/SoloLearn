<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.arsen.sololearntask.activity.ArticleActivity">

    <ImageView
        android:id="@+id/articleImage"
        android:transitionName="transitionImage"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:orientation="vertical"
        android:gravity="bottom"
        android:background="@drawable/article_gradient"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/articleCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:textSize="30sp"
            android:textColor="#FFF"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="50dp"/>

        <TextView
            android:id="@+id/articleNews"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#FFF"
            android:layout_marginBottom="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


</FrameLayout>
